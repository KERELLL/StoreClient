<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardViewHotSalesRoot"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8sp"
        android:id="@+id/cardViewMain"
        android:layout_width="378sp"
        android:layout_height="182sp"
        android:layout_gravity="center"
        app:cardCornerRadius="10sp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#282828">

            <ImageView
                android:id="@+id/hotSalesPicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_marginTop="8sp"
                android:layout_marginLeft="24sp"
                android:layout_width="27sp"
                android:id="@+id/layoutIsNew"
                android:layout_height="27sp">

                <ImageView
                    android:id="@+id/hotSalesIsNew"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/ic_ellipse_9" />

                <TextView
                    android:id="@+id/textIsNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="3sp"
                    android:paddingBottom="8sp"
                    android:text="TEST"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/layoutIsNew"
                android:layout_marginTop="18sp"
                android:id="@+id/hotSalesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="24sp"
                android:text="TEST"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hotSalesSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotSalesTitle"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="5sp"
                android:text="TEST"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="26sp"
                android:textAllCaps="false"
                android:layout_marginLeft="24sp"
                android:layout_below="@id/hotSalesSubtitle"
                android:layout_width="98sp"
                android:layout_height="23sp"
                android:textColor="#010035"
                android:text="@string/buy_now"
                android:background="@drawable/background_button_buy"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>